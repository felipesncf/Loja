@model LojaJaguar.Models.ViewModels.PecaViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Peca</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Peca.Nome" class="control-label"></label>
                <input asp-for="Peca.Nome" class="form-control" />
                <span asp-validation-for="Peca.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Peca.Quantidade" class="control-label"></label>
                <input asp-for="Peca.Quantidade" class="form-control" />
                <span asp-validation-for="Peca.Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Peca.Preco" class="control-label"></label>
                <input asp-for="Peca.Preco" class="form-control" />
                <span asp-validation-for="Peca.Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Peca.CarroId" class="control-label"></label>
                <select asp-for="Peca.CarroId" asp-items="@(new SelectList(Model.Carros,"Id",
"Modelo"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Peca.GalpaoId" class="control-label"></label>
                <select asp-for="Peca.GalpaoId" asp-items="@(new SelectList(Model.Galpoes,"Id",
"Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
