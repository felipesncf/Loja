@model IEnumerable<LojaJaguar.Models.Pesquisa>

@{
    ViewData["Title"] = "Pesquisar";
}

<h1>Pesquisar</h1>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate">Buscar</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
    </div>
</nav>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Peca.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peca.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peca.Carro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peca.Carro.Ano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peca.Galpao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peca.Preco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Peca.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Peca.Quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Peca.Carro.Modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Peca.Carro.Ano)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Peca.Galpao.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Peca.Preco)
                </td>
            </tr>
        }
    </tbody>
</table>
    </div>
</div>
